<div class="container">
  <div class="w-50">
    <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content, placeholder: 'Your review'%>
      <%= f.input :rating, collection: %w(0 1 2 3 4 5) %>
      <%= f.button :submit, class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
