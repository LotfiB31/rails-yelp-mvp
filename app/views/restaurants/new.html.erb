<div class="container">
  <div class="w-50">
    <%= simple_form_for @restaurant do |f| %>
      <%= f.input :name, placeholder: 'Restaurant\'s Name'%>
      <%= f.input :address, placeholder: 'City' %>
      <%= f.input :phone_number, placeholder: 'Phone Number' %>
      <%= f.input :category, collection: %w(chinese italian japanese french belgian) %>
      <%= f.button :submit, class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
